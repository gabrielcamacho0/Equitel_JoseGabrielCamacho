@inject Blazored.LocalStorage.ILocalStorageService sessionStorage
@inject NavigationManager NavManager
@inject HttpClient httpClient
@inject IJSRuntime JSRuntime;
@using Equitel_JoseGabrielCamacho.DataAccess;
@using Equitel_JoseGabrielCamacho.Data;
@using System.Data;

<nav class="navbar navbar-expand-md navbar-dark color-5 mb-4 sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Ventas</a>
        <button class="navbar-toggler @NavButtonCssClass" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavBarCssClass" id="navbarCollapse" @onclick="ToggleNavMenu">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
            </ul>
            <div class="navbar-brand" style="position: relative;">
                <i class="oi oi-person"></i> @NombreUsuario
            </div>
            <div class="nav-item">
                <button class="btn btn-danger color-2" @onclick="CerrarSesion"> <span class="oi oi-account-logout" aria-hidden="true"></span> SALIR</button>
            </div>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";
    private string? NavButtonCssClass => collapseNavMenu ? "collapsed" : null;
    public string NombreUsuario = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (await sessionStorage.GetItemAsync<int>("IdUsuario") != 0)
            {
                NombreUsuario = await sessionStorage.GetItemAsync<string>("NombreUsuario");
            }
        }
        catch
        {
        }
    }

    private async Task CerrarSesion()
    {
        await sessionStorage.ClearAsync();
        NavManager.NavigateTo("/login", true);
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
}